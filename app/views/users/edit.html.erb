<div id="new"><h1>New user</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

<div class="actions"><%= f.submit %></div>
<% end %>
    

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
</div>