
<head>
  <%= javascript_include_tag "jquery.timers-1.2" %>
  <%= javascript_include_tag "jquery.easing.1.3" %>
  <%= javascript_include_tag "jquery.galleryview-3.0-dev" %>
  <%= stylesheet_link_tag "jquery.galleryview-3.0-dev", :media => "all" %>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
		<script src="assets/galleria-1.2.8.min.js"></script>
		<noscript>
			<style>
				.es-carousel ul{
					display:block;
				}
			</style>
		</noscript>
<script type="text/javascript">

    // Load the classic theme
    Galleria.loadTheme('galleria.classic.min.js');

    // Initialize Galleria
    Galleria.run('#galleria');

    </script>
    </head>

<body >
	<div id="showContainer">
		<p id="showHeader">
    		<div id="mainHeader">
    	<span class="homeHeader"><%= link_to "Live Well Chicago", root_url %></span>
    	<nav>

    		</nav>
    		</div>
		</p>
		<div id="showApartment">
			<div id="showPictureSlide">
				<li><%= image_tag @apartment.photo.url (:small) %> </li>
				<li><%= image_tag @apartment.photo2.url (:small) %> </li>
				<li><%= image_tag @apartment.photo3.url (:small) %> </li>
				<li><%= image_tag @apartment.photo3.url (:small) %> </li>
			</div>	
			
			</div>
			<div id="showDescription">
				<div id="showDescriptionHeader">
				<%= @apartment.location %> 
				&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
				<%= @apartment.Bed %> BDR / <%= @apartment.Bath %> BTH
				&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
				$<%= @apartment.Rent %>
				</div>
				<div id="showColumns" >
					<p>
						<b>Agent</b>
						<%= @apartment.agent %>
					</p>
					<p>
						<b>Pets</b>
						<%= @apartment.Pets %>
					</p>
					<p>
						<b>Deposit</b>
						$<%= @apartment.Security_Deposit %>
					</p>
					<p>
						<b>Parking</b>
						<%= @apartment.Parking %>
					</p>
					<p>
						<b>Laundry</b>
						<%= @apartment.Laundy %>
					</p>
					<p>
						<b>Available </b>
						<%= @apartment.Date_Avail %>
					</p>
					<p>
						<b>Heat</b>
						<%= @apartment.Type_Heat %>
					</p>
					<p>
						<b>AC</b>
						<%= @apartment.AC %>
					</p>
				</div>	
				<p style="font-size: 25px; color:  #dc3b3b;">
					<%= @apartment.availability %>
				</p><br />
				<p style="font-size: 20px">
				
					<%= @apartment.description %>
				</p>
			</div>
		</div>
	</div>
</body>
</html>
